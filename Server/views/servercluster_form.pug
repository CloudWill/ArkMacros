extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='servercluster') Servercluster:
      input#name.form-control(type='text', placeholder='crossark14, pvp-official, etc' name='servercluster_name' required='true' value=(undefined===servercluster ? '' : servercluster.servercluster_name) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg