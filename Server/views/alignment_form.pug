extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='alignment') Alignment:
      input#name.form-control(type='text', placeholder='Ally, Enemy, Neutral, etc' name='alignment_name' required='true' value=(undefined===alignment ? '' : alignment.alignment_name) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg