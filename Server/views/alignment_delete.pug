extends layout

block content

  h1 Delete Alignment: #{alignment.alignment}
  
  if alignment_tribes.length
  
    p #[strong Delete the following tribes before attempting to delete this alignment.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Tribes
    
      dl
      each tribe in alignment_tribes
        dt 
          a(href=tribe.url) #{tribe.tribe_name}

  else
    p Do you really want to delete this Alignment?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=alignment._id )

      button.btn.btn-primary(type='submit') Delete