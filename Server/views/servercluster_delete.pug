extends layout

block content

  h1 Delete Servercluster: #{servercluster.servercluster}
  
  if servercluster_servers.length
  
    p #[strong Delete the following servers before attempting to delete this servercluster.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Servers
    
      dl
      each server in servercluster_servers
        dt 
          a(href=server.url) #{server.server_name}

  else
    p Do you really want to delete this Servercluster?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=servercluster._id )

      button.btn.btn-primary(type='submit') Delete