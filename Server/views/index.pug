extends layout

block content
    h1= title

    h3 Usage information

    pre #{help}
  
    br

    if error
        p Error getting dynamic content.
    else

        p Current record counts:

        ul
            li #[strong Players:] !{data.player_count}
            li #[strong Servers:] !{data.server_count}
            li #[strong Tribes:] !{data.tribe_count}
            li #[strong Alignments:] !{data.alignment_count}
            li #[strong Server Clusters:] !{data.servercluster_count}



