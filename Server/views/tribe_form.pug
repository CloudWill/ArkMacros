extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='tribe_name') Tribe Name:
      input#tribe_name.form-control(type='text', placeholder='Tribe name' name='tribe_name' required='true' value=(undefined===tribe ? ' ' : tribe.tribe_name) )
    div.form-group
      label Alignment:
      div
        for alignment in alignments
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='alignment', id=alignment._id, value=alignment._id, checked=alignment.checked )
            label(for=alignment._id) #{alignment.alignment_name}
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg